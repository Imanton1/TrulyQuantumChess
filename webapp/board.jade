extends _template.jade

block body
  .chessboard-container(align="center")
    table.chessboard
      for y in [7, 6, 5, 4, 3, 2, 1, 0]
        tr
          for x in [0, 1, 2, 3, 4, 5, 6, 7]
            - var i = y * 8 + x;
            td(id="sq"+i, class=((x + y) % 2 == 0) ? "square-black" : "square-white")
